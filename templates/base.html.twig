<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="{{ asset('img/favicon.png') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <!--<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">-->

</head>
<body>

<header>
    <h1>Bucket List</h1>
    <img src="{{ asset('img/logo.png') }}" alt="logo">

    <nav>
        <ul>
            <li><a class="entete" href="{{ path('main_index') }}">HOME</a></li>
            <li><a class="entete" href="{{ path('about_page') }}">About us</a></li>
            <li><a class="entete" href="{{ path('wish_form') }}">Ajouts d'idées</a></li>
            <li><a class="entete" href="{{ path('wish_list') }}">Liste des idées</a></li>

        </ul>
    </nav>
</header>
<div class="test">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {% block body %}
    {% endblock %}
    {% block body2 %}
    {% endblock %}
    {% block bodyDetail %}
    {% endblock %}
    {% block bodyList %}
    {% endblock %}
    {% block bodyForm %}
    {% endblock %}
</div>
<footer>©Bucket-List {{ "now"|date("Y") }}</footer>
</body>

</html>
